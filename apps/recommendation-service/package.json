{
  "name": "@eshop/recommendation-service",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "test:phase1": "npx ts-node src/__tests__/run-phase1-tests.ts"
  },
  "nx": {
    "targets": {
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/recommendation-service/dist/package.json",
          "{workspaceRoot}/apps/recommendation-service/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/recommendation-service/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@eshop/recommendation-service:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@eshop/recommendation-service:build:development"
          },
          "production": {
            "buildTarget": "@eshop/recommendation-service:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.14.0",
    "ts-node": "^10.9.2"
  }
}
